{
  "name": "@commentwidget/core",
  "version": "1.0.1",
  "type": "module",
  "description": "A powerful contextual commenting system for any website",
  "main": "dist/comment-widget.esm.js",
  "module": "dist/comment-widget.esm.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/comment-widget.umd.js",
  "jsdelivr": "dist/comment-widget.umd.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:static": "tsc && vite build && vite build -c vite.demo.config.ts && mkdir -p dist-static/dist && cp dist/comment-widget.iife.js dist-static/dist/comment-widget.umd.js && cp dist/comment-widget.iife.js.map dist-static/dist/comment-widget.umd.js.map && cp dist/comment-widget.esm.js dist-static/dist/comment-widget.esm.js",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "comments",
    "commenting",
    "widget",
    "figma-style",
    "collaboration",
    "feedback"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@floating-ui/react": "^0.27.16",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.511.0",
    "mousetrap": "^1.6.5",
    "react-textarea-autosize": "^8.5.9",
    "uuid": "^13.0.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mousetrap": "^1.6.15",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.12",
